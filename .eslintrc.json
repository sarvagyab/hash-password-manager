{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-use-before-define": ["error", { "functions" : false } ],
    "import/extensions": [2, "ignorePackages"],
    "max-len": ["error", { "code": 100 }]
  }
}